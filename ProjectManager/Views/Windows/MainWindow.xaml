<mah:MetroWindow x:Class="ProjectManager.UI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:uc="clr-namespace:ProjectManager.UI.Views"
        xmlns:p="clr-namespace:ProjectManager.UI.Properties"
        xmlns:vm="clr-namespace:ProjectManager.UI.ViewModels"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        mc:Ignorable="d"
        Title="{x:Static p:Resources.ProjectManager}" MinHeight="300" MinWidth="500"
        Closed="MainWindow_OnClosed">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition MaxHeight="40"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <uc:LanguageControl Width="100"
                            Margin="5"
                            HorizontalAlignment="Left"/>
        <Frame x:Name="Frame" Grid.Row="1"/>
    </Grid>
</mah:MetroWindow>
